<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.geobert.efficio">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ItemEditorActivity"
            android:label="@string/change_item_name_and_dep"
            android:launchMode="singleTop" />

        <provider
            android:name=".db.DbContentProvider"
            android:authorities="fr.geobert.efficio"
            android:exported="false" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="042692be669fee44b81f635e59db4a99012d097f" />
    </application>

</manifest>
